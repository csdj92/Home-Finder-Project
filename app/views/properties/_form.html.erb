<%= form_for(property) do |f| %>
<%= render "layouts/validation", item: @property %>
  
  
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rooms %>
    <%= f.number_field :rooms, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bathrooms %>
    <%= f.number_field :bathrooms, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :photo %>
    <%= f.hidden_field :image, value: @photo&.cached_image_data %>
    <%= f.file_field :image %>
  </div>

  <% if property.company_id.nil? %> 
    <div class="form-group">
      <%= f.label :company %> <br />
      <%= f.collection_select(:company_id, Company.all, :id, :name, { :prompt=>"Select a Company" }, { :class => "form-control" }) %>
    <% else %>
      <%= f.hidden_field :company_id %>
    </div>
    <% end %>


  

  <div class="actions">
    <%= f.submit "Save Listing", class: "btn btn lg  btn-success" %>
  </div>
<% end %>
