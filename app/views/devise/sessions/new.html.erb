 <section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email Address", autocomplete: "current-email" %>

        
        <label for="inputPassword" class="sr-only">Password</label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class: "form-control" %>
      
          
          <div class="form-group">
            <%= f.label :company %> <br />
            <%= f.collection_select(:company_id, Company.all, :id, :name, { :prompt=>"Select a Company" }, { :class => "form-control" }) %>
          </div>

        <div class="checkbox mb-3">
          <% if devise_mapping.rememberable? %>
            <div class="field">
            <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          </div>
        </div>
        <% end %>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <div class ="md-6">
        <%= link_to account_github_omniauth_authorize_path, class: "nav-link" do  %>
         <i class="fab fa-github"></i>
        <% end %>
        </div>
        <p class="mt-5 mb-3 text-muted">Â© 2017-2018</p>
    <% end %>
  <%= render "devise/shared/links" %>
</section>

